<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android=
    "http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools">

    <androidx.drawerlayout.widget.DrawerLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:id="@+id/drawerLayout">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="@color/home_back">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="vertical">

                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/_50sdp">

                    <ImageView
                        android:id="@+id/ivMenu"
                        android:padding="@dimen/_3sdp"
                        android:layout_width="@dimen/_25sdp"
                        android:layout_height="@dimen/_25sdp"
                        android:layout_marginLeft="@dimen/_10sdp"
                        android:layout_centerVertical="true"
                        android:src="@drawable/menu"/>

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textSize="@dimen/_18sdp"
                        android:textColor="@color/black"
                        android:layout_gravity="center"
                        android:layout_centerInParent="true"
                        android:fontFamily="@font/circular_bold"
                        android:text="@string/my_requests"/>

                </RelativeLayout>

                <View
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/_1sdp"
                    android:background="@color/gray"/>

                <androidx.cardview.widget.CardView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    app:cardCornerRadius="@dimen/_5sdp"
                    app:contentPadding="@dimen/_5sdp"
                    android:elevation="@dimen/_10sdp"
                    android:layout_margin="@dimen/_5sdp"
                    app:cardBackgroundColor="@color/white">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="vertical">

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:textStyle="bold"
                            android:fontFamily="@font/circular_bold"
                            android:text="@string/pickup_address"
                            android:textSize="@dimen/_10sdp"
                            android:textColor="@color/black"
                            android:inputType="textVisiblePassword" />

                        <TextView
                            android:id="@+id/tvPickupAdd"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:fontFamily="@font/circular_regular"
                            android:layout_marginTop="@dimen/_3sdp"
                            android:drawableLeft="@drawable/ic_blue_location"
                            android:textSize="@dimen/_9sdp"
                            android:drawablePadding="@dimen/_5sdp"
                            android:text="@string/pickup_dummyaddress"
                            android:textColor="@color/gray" />

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:textStyle="bold"
                            android:layout_marginTop="@dimen/_5sdp"
                            android:fontFamily="@font/circular_bold"
                            android:text="@string/dropoff_address"
                            android:textSize="@dimen/_10sdp"
                            android:textColor="@color/black"
                            android:inputType="textVisiblePassword" />

                        <TextView
                            android:id="@+id/DropOff"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:fontFamily="@font/circular_regular"
                            android:layout_marginTop="@dimen/_3sdp"
                            android:drawableLeft="@drawable/ic_blue_location"
                            android:textSize="@dimen/_9sdp"
                            android:drawablePadding="@dimen/_5sdp"
                            android:text="@string/dropoff_dummyaddress"
                            android:textColor="@color/gray" />

                        <RelativeLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content">

                            <LinearLayout
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_centerVertical="true"
                                android:orientation="horizontal">

                                <TextView
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:text="Quantity : "
                                    android:textStyle="bold"
                                    android:fontFamily="@font/circular_bold"
                                    android:layout_marginTop="@dimen/_5sdp"
                                    android:textSize="@dimen/_10sdp"
                                    android:textColor="@color/black"
                                    android:inputType="textVisiblePassword" />

                                <TextView
                                    android:id="@+id/tvQuantity"
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:layout_marginLeft="@dimen/_5sdp"
                                    android:textStyle="bold"
                                    android:fontFamily="@font/circular_regular"
                                    android:text="35KG - 40KG"
                                    android:layout_marginTop="@dimen/_5sdp"
                                    android:textSize="@dimen/_10sdp"
                                    android:textColor="@color/orange"
                                    android:inputType="textVisiblePassword" />

                            </LinearLayout>

                            <TextView
                                android:id="@+id/tvStatus"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="Pending"
                                android:textStyle="bold"
                                android:visibility="gone"
                                android:paddingRight="@dimen/_15sdp"
                                android:paddingLeft="@dimen/_15sdp"
                                android:paddingTop="@dimen/_6sdp"
                                android:paddingBottom="@dimen/_6sdp"
                                android:layout_centerVertical="true"
                                android:layout_alignParentRight="true"
                                android:background="@drawable/orange_outline_back"
                                android:fontFamily="@font/circular_bold"
                                android:layout_marginTop="@dimen/_5sdp"
                                android:textSize="@dimen/_11sdp"
                                android:textColor="@color/green"
                                android:inputType="textVisiblePassword" />

                        </RelativeLayout>

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:orientation="vertical"
                            android:layout_marginTop="@dimen/_5sdp">

                            <androidx.appcompat.widget.AppCompatButton
                                android:id="@+id/btParcel"
                                android:layout_width="match_parent"
                                android:layout_height="@dimen/_30sdp"
                                android:background="@drawable/orange_back_10"
                                android:textColor="@color/white"
                                android:textAllCaps="false"
                                android:textStyle="bold"
                                android:layout_centerVertical="true"
                                android:paddingRight="@dimen/_15sdp"
                                android:paddingLeft="@dimen/_15sdp"
                                android:textSize="@dimen/_10sdp"
                                android:fontFamily="@font/circular_bold"
                                android:text="@string/parcel_detail" />

                        </LinearLayout>

                    </LinearLayout>

                </androidx.cardview.widget.CardView>

                <androidx.cardview.widget.CardView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    app:cardCornerRadius="@dimen/_5sdp"
                    app:contentPadding="@dimen/_5sdp"
                    android:elevation="@dimen/_10sdp"
                    android:layout_margin="@dimen/_5sdp"
                    app:cardBackgroundColor="@color/white">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="vertical">

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:textStyle="bold"
                            android:fontFamily="@font/circular_bold"
                            android:text="@string/pickup_address"
                            android:textSize="@dimen/_10sdp"
                            android:textColor="@color/black"
                            android:inputType="textVisiblePassword" />

                        <TextView
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:fontFamily="@font/circular_regular"
                            android:layout_marginTop="@dimen/_3sdp"
                            android:drawableLeft="@drawable/ic_blue_location"
                            android:textSize="@dimen/_9sdp"
                            android:drawablePadding="@dimen/_5sdp"
                            android:text="@string/pickup_dummyaddress"
                            android:textColor="@color/gray" />

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:textStyle="bold"
                            android:layout_marginTop="@dimen/_5sdp"
                            android:fontFamily="@font/circular_bold"
                            android:text="@string/dropoff_address"
                            android:textSize="@dimen/_10sdp"
                            android:textColor="@color/black"
                            android:inputType="textVisiblePassword" />

                        <TextView
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:fontFamily="@font/circular_regular"
                            android:layout_marginTop="@dimen/_3sdp"
                            android:drawableLeft="@drawable/ic_blue_location"
                            android:textSize="@dimen/_9sdp"
                            android:drawablePadding="@dimen/_5sdp"
                            android:text="@string/dropoff_dummyaddress"
                            android:textColor="@color/gray" />

                        <RelativeLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content">

                            <LinearLayout
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_centerVertical="true"
                                android:orientation="horizontal">

                                <TextView
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:text="Quantity : "
                                    android:textStyle="bold"
                                    android:fontFamily="@font/circular_bold"
                                    android:layout_marginTop="@dimen/_5sdp"
                                    android:textSize="@dimen/_10sdp"
                                    android:textColor="@color/black"
                                    android:inputType="textVisiblePassword" />

                                <TextView
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:layout_marginLeft="@dimen/_5sdp"
                                    android:textStyle="bold"
                                    android:fontFamily="@font/circular_regular"
                                    android:text="35KG - 40KG"
                                    android:layout_marginTop="@dimen/_5sdp"
                                    android:textSize="@dimen/_10sdp"
                                    android:textColor="@color/orange"
                                    android:inputType="textVisiblePassword" />

                            </LinearLayout>

                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="Pending"
                                android:textStyle="bold"
                                android:visibility="gone"
                                android:paddingRight="@dimen/_15sdp"
                                android:paddingLeft="@dimen/_15sdp"
                                android:paddingTop="@dimen/_6sdp"
                                android:paddingBottom="@dimen/_6sdp"
                                android:layout_centerVertical="true"
                                android:layout_alignParentRight="true"
                                android:background="@drawable/orange_outline_back"
                                android:fontFamily="@font/circular_bold"
                                android:layout_marginTop="@dimen/_5sdp"
                                android:textSize="@dimen/_11sdp"
                                android:textColor="@color/green"
                                android:inputType="textVisiblePassword" />

                        </RelativeLayout>

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:orientation="vertical"
                            android:layout_marginTop="@dimen/_5sdp">

                            <androidx.appcompat.widget.AppCompatButton
                                android:layout_width="match_parent"
                                android:layout_height="@dimen/_30sdp"
                                android:background="@drawable/orange_back_10"
                                android:textColor="@color/white"
                                android:textAllCaps="false"
                                android:textStyle="bold"
                                android:layout_centerVertical="true"
                                android:paddingRight="@dimen/_15sdp"
                                android:paddingLeft="@dimen/_15sdp"
                                android:textSize="@dimen/_10sdp"
                                android:fontFamily="@font/circular_bold"
                                android:text="@string/parcel_detail" />

                        </LinearLayout>

                    </LinearLayout>

                </androidx.cardview.widget.CardView>

            </LinearLayout>

            <ImageView
                android:id="@+id/ivAddAdress"
                android:layout_width="@dimen/_50sdp"
                android:layout_height="@dimen/_50sdp"
                android:layout_alignParentBottom="true"
                android:layout_marginRight="@dimen/_15sdp"
                android:layout_marginBottom="@dimen/_15sdp"
                android:layout_alignParentRight="true"
                android:src="@drawable/add_parcel"/>

        </RelativeLayout>

        <com.google.android.material.navigation.NavigationView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_gravity="start">

            <include
                android:id="@+id/navItems"
                layout="@layout/shipping_nav_items" />

        </com.google.android.material.navigation.NavigationView>

    </androidx.drawerlayout.widget.DrawerLayout>

</layout>




